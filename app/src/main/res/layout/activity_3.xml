<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:background="@color/white">

    <TextView
        android:layout_marginBottom="500dp"
        android:layout_marginRight="90dp"
        android:id="@+id/register_text_view"
        android:fontFamily="@font/arial"
        android:textColor="@color/black"
        android:textSize="37sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER FORM"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <EditText
        android:id="@+id/name_edit_text"
        android:layout_width="300dp"
        android:layout_height="35sp"
        android:layout_marginTop="56dp"
        android:background="@drawable/button1"
        android:fontFamily="@font/arial"
        android:hint="@string/name"
        android:paddingLeft="24dp"
        android:textColorHint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/register_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="22dp"
        app:layout_constraintBottom_toTopOf="@+id/email_text"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/email_text"
        android:layout_width="300dp"
        android:layout_height="35sp"
        android:layout_marginTop="56dp"
        android:background="@drawable/button1"
        android:fontFamily="@font/arial"
        android:hint="@string/email"
        android:paddingLeft="24dp"
        android:textColorHint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/name_edit_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/pass_text"
        android:layout_marginRight="22dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/pass_text"
        android:layout_width="300dp"
        android:layout_height="35sp"
        android:layout_marginTop="56dp"
        android:background="@drawable/button1"
        android:fontFamily="@font/arial"
        android:hint="@string/password"
        android:paddingLeft="24dp"
        android:textColorHint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/email_text"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="22dp"
        app:layout_constraintBottom_toTopOf="@+id/repeat_pass" />

    <EditText
        android:id="@+id/repeat_pass"
        android:layout_width="300dp"
        android:layout_height="35sp"
        android:layout_marginTop="56dp"
        android:background="@drawable/button1"
        android:fontFamily="@font/arial"
        android:hint="Repeat Password"
        android:paddingLeft="24dp"
        android:textColorHint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/pass_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/sign_up"
        android:layout_marginRight="22dp"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sign_up"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/button"
        android:fontFamily="@font/arial"
        android:text="Sign Up"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/repeat_pass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="200dp"
        tools:ignore="MissingConstraints"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/if_text_view"
        android:paddingLeft="14dp"
        android:fontFamily="@font/arial"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If you have an account , please"
        app:layout_constraintTop_toBottomOf="@+id/sign_up"
        android:layout_marginTop="82dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/sign_in_txt"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="23dp" />

    <TextView
        app:layout_constraintStart_toEndOf="@id/if_text_view"
        android:id="@+id/sign_in_txt"
        android:paddingLeft="7dp"
        android:fontFamily="@font/arial"
        android:textColor="#FF5D5D"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="23dp"
        android:layout_marginTop="82dp"
        android:layout_marginBottom="23dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>